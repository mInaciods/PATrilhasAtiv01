using System;

class Program
{
  public static void Main(string[] args)
  {
    Console.Write("Digite o preço do produto: ");
    int preco = Convert.ToInt32(Console.ReadLine());
    Console.Write("Escreva o desconto em porcentagem:  ");
    int desconto = Convert.ToInt32(Console.ReadLine());
    int precofinal = preco - (preco * desconto / 100);
   
    Console.WriteLine("O preço final é: " + precofinal);


    Console.Write("Press any key to continue . . . ");
    Console.ReadKey(true);
  }
}
